{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2024",
    "module": "preserve",
    "moduleResolution": "bundler",
    "lib": ["ES2024", "DOM", "DOM.Iterable", "DOM.AsyncIterable"],
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "types": ["vite/client", "@vitejs/plugin-rsc/types"]
  },
  "include": ["src"]
}
